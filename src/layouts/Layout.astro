---
import "~/styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import CookieConsent from "~/components/CookieConsent.astro";
const { pageTitle, title, description } = Astro.props;
const baseUrl = `${Astro.url.protocol}//${Astro.url.host}`;
import { siteLang, themeColor } from "~/data/config";
---

<!doctype html>
<html lang={siteLang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content="#E6F4FF" />
		<meta name="description" content="Objevte krásu ručně vyráběných věnců a sušených květin. Každý kousek je tvořen s láskou z nejlepších přírodních materiálů – podzimní i celoroční věnce, elegantní dekorace, svatební kytice i originální dárky. Ruční práce, přírodní styl a osobní přístup." />
		<meta name="robots" content="index,follow" />
		<meta name="googlebot" content="index,follow" />
		<link rel="author" href="humans.txt" />

		<meta name="msapplication-TileColor" content="#ffffff" />

		<meta property="og:url" content={Astro.url} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Ručně vyráběné věnce a sušené květiny | Natálie Ruszová" />
		<meta property="og:image" content={`${baseUrl}/3.jpg`} />
		<meta property="og:description" content="Objevte krásu ručně vyráběných věnců a sušených květin. Ruční práce, přírodní materiály a dekorace na míru." />
		<meta property="og:site_name" content="Natálie Ruszová – věnce a sušené květiny" />
		<meta property="og:locale" content="cs_CZ" />

		<meta name="twitter:card" content="summary" />
		<meta name="twitter:url" content={Astro.url} />
		<meta name="twitter:title" content="Ručně vyráběné věnce a sušené květiny | Natálie Ruszová" />
		<meta name="twitter:description" content="Každý věnec i kytice jsou originál – vytvořené s láskou a z přírodních materiálů. Elegantní dekorace i dárky na míru." />
		<meta name="twitter:image" content={`${baseUrl}/3.jpg`} />

		<title>Ručně vyráběné věnce a sušené květiny | Natálie Ruszová</title>
		<ClientRouter />		
		<CookieConsent client:load />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
